<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
  <link rel='stylesheet' href='/stylesheets/style.css'/>
</head>
<style>
  .flex{
    display: flex;
  }
  .item{
    width:200px;
    height:100px;
  }
  .between{
    justify-content: space-between;
  }
</style>
<body>
<%- include('./error'); %>
<% if(isAuth) { %>
  <div class="flex between">
    <a href="/logout">Logout</a>
    <% console.log(userInfo) %>
    <% if(userInfo !== [undefined, undefined]){%>
      <div><%= userInfo[0] %></div>
      <div><img src="<%= userInfo[1] %>"></div>
    <% } %>
  </div>
  <form action="/" method="post">
    <label>タスクの追加</label>
    <input required type="text" name="add" placeholder="何をする?"/>
    <input type="submit" value="追加"/>
  </form>
    <ul>
      <% for(let todo of todos){ %>
        <li><span><%= todo.content %></span></li>
      <% } %>
    </ul>
<% } else { %>
  <h1>Welcome to the TodoApp</h1>
  <a href="/signin">Sign in now!</a>
  <br>
  <a href="/signup">Sign up now!</a>
  <br>
  <a href="/oauth">Twitterでログイン</a>
<% } %>
</body>
</html>
